<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu_pop_bg"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/menu_check"
        android:gravity="center_vertical"
        android:padding="@dimen/_20px_in720p"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:background="@drawable/menu_check"
            android:layout_width="@dimen/_30px_in720p"
            android:layout_height="@dimen/_30px_in720p" />

        <TextView
            android:layout_marginLeft="@dimen/_20px_in720p"
            android:textSize="@dimen/_35px_in720p"
            android:textColor="@color/black"
            android:text="条件查询"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu_chart"
        android:gravity="center_vertical"
        android:padding="@dimen/_20px_in720p"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:background="@drawable/menu_chart"
            android:layout_width="@dimen/_30px_in720p"
            android:layout_height="@dimen/_30px_in720p" />

        <TextView
            android:layout_marginLeft="@dimen/_20px_in720p"
            android:textSize="@dimen/_35px_in720p"
            android:textColor="@color/black"
            android:text="数据统计"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/menu_map"
        android:gravity="center_vertical"
        android:padding="@dimen/_20px_in720p"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:background="@drawable/menu_map"
            android:layout_width="@dimen/_30px_in720p"
            android:layout_height="@dimen/_30px_in720p" />

        <TextView
            android:layout_marginLeft="@dimen/_20px_in720p"
            android:textSize="@dimen/_35px_in720p"
            android:textColor="@color/black"
            android:text="地图显示"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu_help"
        android:gravity="center_vertical"
        android:padding="@dimen/_20px_in720p"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:background="@drawable/menu_help"
            android:layout_width="@dimen/_30px_in720p"
            android:layout_height="@dimen/_30px_in720p" />

        <TextView
            android:layout_marginLeft="@dimen/_20px_in720p"
            android:textSize="@dimen/_35px_in720p"
            android:textColor="@color/black"
            android:text="帮助"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>



</LinearLayout>