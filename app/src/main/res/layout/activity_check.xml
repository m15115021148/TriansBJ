<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.sitemap.beijingtrain.activity.CheckActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_90px_in720p">

        <LinearLayout
            android:id="@+id/check_delete"
            android:layout_width="@dimen/_100px_in720p"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical">

            <ImageView
                android:layout_marginLeft="@dimen/_20px_in720p"
                android:layout_width="@dimen/_30px_in720p"
                android:layout_height="@dimen/_30px_in720p"
                android:background="@drawable/clear" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="条件查询"
            android:textColor="@color/black_dan"
            android:textSize="@dimen/_35px_in720p" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_2px_in720p"
        android:background="@color/grey_dan" />

    <RelativeLayout
        android:id="@+id/re_train"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/_25px_in720p"
        android:paddingLeft="@dimen/_20px_in720p"
        android:paddingRight="@dimen/_20px_in720p"
        android:paddingTop="@dimen/_25px_in720p">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="车次"
            android:textColor="@color/txt_hui"
            android:textSize="@dimen/_30px_in720p" />

        <TextView
            android:id="@+id/check_train"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/_20px_in720p"
            android:layout_toLeftOf="@+id/img"
            android:gravity="right"
            android:hint="请选择"
            android:singleLine="true"
            android:textColor="@color/black_dan"
            android:textColorHint="@color/txt_hui"
            android:textSize="@dimen/_30px_in720p" />

        <ImageView
            android:id="@+id/img"
            android:layout_width="@dimen/_15px_in720p"
            android:layout_height="@dimen/_25px_in720p"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/back" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_2px_in720p"
        android:background="@color/grey_dan"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/re_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/_25px_in720p"
        android:paddingLeft="@dimen/_20px_in720p"
        android:paddingRight="@dimen/_20px_in720p"
        android:paddingTop="@dimen/_25px_in720p"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="车厢"
            android:textColor="@color/txt_hui"
            android:textSize="@dimen/_30px_in720p" />

        <TextView
            android:id="@+id/check_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/_20px_in720p"
            android:layout_toLeftOf="@+id/img1"
            android:gravity="right"
            android:hint="请选择"
            android:singleLine="true"
            android:textColor="@color/black_dan"
            android:textColorHint="@color/txt_hui"
            android:textSize="@dimen/_30px_in720p" />

        <ImageView
            android:id="@+id/img1"
            android:layout_width="@dimen/_15px_in720p"
            android:layout_height="@dimen/_25px_in720p"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/back" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_2px_in720p"
        android:background="@color/grey_dan" />

    <RelativeLayout
        android:id="@+id/re_s_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/_25px_in720p"
        android:paddingLeft="@dimen/_20px_in720p"
        android:paddingRight="@dimen/_20px_in720p"
        android:paddingTop="@dimen/_25px_in720p">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="起始时间"
            android:textColor="@color/txt_hui"
            android:textSize="@dimen/_30px_in720p" />

        <TextView
            android:id="@+id/check_s_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/_20px_in720p"
            android:layout_toLeftOf="@+id/img2"
            android:gravity="right"
            android:hint="请选择"
            android:singleLine="true"
            android:textColor="@color/black_dan"
            android:textColorHint="@color/txt_hui"
            android:textSize="@dimen/_30px_in720p" />

        <ImageView
            android:id="@+id/img2"
            android:layout_width="@dimen/_15px_in720p"
            android:layout_height="@dimen/_25px_in720p"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/back" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_2px_in720p"
        android:background="@color/grey_dan" />

    <RelativeLayout
        android:id="@+id/re_e_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/_25px_in720p"
        android:paddingLeft="@dimen/_20px_in720p"
        android:paddingRight="@dimen/_20px_in720p"
        android:paddingTop="@dimen/_25px_in720p">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="终止时间"
            android:textColor="@color/txt_hui"
            android:textSize="@dimen/_30px_in720p" />

        <TextView
            android:id="@+id/check_e_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/_20px_in720p"
            android:layout_toLeftOf="@+id/img3"
            android:gravity="right"
            android:hint="请选择"
            android:singleLine="true"
            android:textColor="@color/black_dan"
            android:textColorHint="@color/txt_hui"
            android:textSize="@dimen/_30px_in720p" />

        <ImageView
            android:id="@+id/img3"
            android:layout_width="@dimen/_15px_in720p"
            android:layout_height="@dimen/_25px_in720p"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/back" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100px_in720p"
        android:background="@color/white" />

    <TextView
        android:id="@+id/check_sure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_20px_in720p"
        android:background="@color/black"
        android:gravity="center"
        android:padding="@dimen/_20px_in720p"
        android:text="查询"
        android:textColor="@color/white"
        android:textSize="@dimen/_35px_in720p" />

</LinearLayout>
